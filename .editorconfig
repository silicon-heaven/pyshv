# EditorConfig: https://EditorConfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.sh]
indent_style = tab

[*.py]
max_line_length = 79

# Usually config files
[*.{toml,yml,nix}]
indent_size = 2

[*.{diff,patch}]
# Avoid to trim trailing whitespace
trim_trailing_whitespace = false
